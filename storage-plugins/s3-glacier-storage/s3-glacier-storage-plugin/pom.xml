<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>fr.cnes.regards.modules.storage.plugins</groupId>
    <artifactId>s3-glacier-storage-plugin</artifactId>
    <description>Plugin to deal with S3 Glacier</description>
    <parent>
        <groupId>fr.cnes.regards.plugins</groupId>
        <artifactId>oss-plugin-parent</artifactId>
        <version>${revision}</version>
        <relativePath>../../../oss-plugin-parent</relativePath>
    </parent>

    <url>https://github.com/RegardsOss/RegardsOss.github.io</url>
    <inceptionYear>2016</inceptionYear>
    <licenses>
        <license>
            <name>GNU General Public License (GNU GPL)</name>
            <url>http://www.gnu.org/licenses/gpl.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <organization>
        <name>CNES</name>
        <url>https://cnes.fr/fr</url>
    </organization>
    <developers>
        <developer>
            <name>REGARDS Team</name>
            <organization>CS Group</organization>
            <organizationUrl>https://www.csgroup.eu</organizationUrl>
        </developer>
    </developers>

    <properties>
        <regardsMs>storage</regardsMs>
    </properties>

    <dependencies>
        <!-- Regards -->
        <dependency>
            <groupId>fr.cnes.regards.framework.modules.plugins</groupId>
            <artifactId>plugins-domain</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.modules.fileaccess.plugin</groupId>
            <artifactId>file-access-plugin-domain</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.modules.storage.plugins</groupId>
            <artifactId>s3-storage-common-plugin</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.framework.utils</groupId>
            <artifactId>file-utils</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.framework.modules.workspace</groupId>
            <artifactId>workspace-service</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.framework</groupId>
            <artifactId>s3-starter</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.framework</groupId>
            <artifactId>jpa-multitenant-regards</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.framework.utils</groupId>
            <artifactId>s3-storage-utils</artifactId>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.modules.storage.plugins</groupId>
            <artifactId>s3-glacier-storage-plugin-dto</artifactId>
        </dependency>

        <!-- External -->
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
        </dependency>

        <!-- Test -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.framework.test</groupId>
            <artifactId>regards-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.framework.utils</groupId>
            <artifactId>plugin-utils</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.framework.test</groupId>
            <artifactId>regards-s3-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <minimizeJar>false</minimizeJar>
                            <artifactSet>
                                <includes>
                                    <include>fr.cnes.regards.modules.storage.plugins:s3-glacier-storage-plugin-dto
                                    </include>
                                    <include>io.projectreactor:reactor-core</include>
                                    <include>org.reactivestreams:reactive-streams</include>
                                    <include>commons-codec:commons-codec</include>
                                    <include>commons-io:commons-io</include>
                                    <include>com.github.ben-manes.caffeine:caffeine</include>
                                    <include>org.checkerframework:checker-qual</include>
                                    <include>com.google.errorprone:error_prone_annotations</include>
                                    <include>software.amazon.awssdk:*</include>
                                    <include>software.amazon.eventstream:eventstream</include>
                                    <include>org.apache.httpcomponents:*</include>
                                    <include>io.netty:*</include>
                                    <include>com.typesafe.netty:*</include>
                                    <include>fr.cnes.regards.framework.utils:s3-storage-utils</include>
                                    <include>fr.cnes.regards.framework:s3-starter</include>
                                    <include>fr.cnes.regards.framework.utils.file:*</include>
                                    <include>fr.cnes.regards.modules.storage.plugins:s3-storage-common</include>
                                    <include>fr.cnes.regards.modules.storage.plugins:s3-storage-common-plugin</include>
                                    <include>fr.cnes.regards.modules.storage.plugins:s3-storage-common-plugin-dto</include>
                                </includes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>