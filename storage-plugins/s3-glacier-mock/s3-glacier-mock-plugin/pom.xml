<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>fr.cnes.regards.modules.storage.plugins</groupId>
        <artifactId>s3-glacier-mock</artifactId>
        <version>${revision}</version>
    </parent>

    <artifactId>s3-glacier-mock-plugin</artifactId>

    <name>s3-glacier-mock-plugin</name>
    <description>Test plugin for REGARDS storage microservice</description>
    <url>https://github.com/RegardsOss/RegardsOss.github.io</url>

    <dependencies>
        <dependency>
            <groupId>fr.cnes.regards.modules.storage.plugins</groupId>
            <artifactId>s3-glacier-storage-plugin</artifactId>
            <version>${revision}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.modules.fileaccess.plugin</groupId>
            <artifactId>file-access-plugin-domain</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>fr.cnes.regards.modules.storage</groupId>
            <artifactId>storage-domain</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>fr.cnes.regards.framework.test</groupId>
            <artifactId>regards-test</artifactId>
            <version>${revision}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>fr.cnes.regards.modules.storage.plugins</groupId>
            <artifactId>s3-storage-common-plugin</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <minimizeJar>false</minimizeJar>
                            <artifactSet>
                                <includes>
                                    <include>fr.cnes.regards.modules.storage.plugins:s3-glacier-storage-plugin-dto
                                    </include>
                                    <include>io.projectreactor:reactor-core</include>
                                    <include>org.reactivestreams:reactive-streams</include>
                                    <include>commons-codec:commons-codec</include>
                                    <include>commons-io:commons-io</include>
                                    <include>com.github.ben-manes.caffeine:caffeine</include>
                                    <include>org.checkerframework:checker-qual</include>
                                    <include>com.google.errorprone:error_prone_annotations</include>
                                    <include>software.amazon.awssdk:*</include>
                                    <include>software.amazon.eventstream:eventstream</include>
                                    <include>org.apache.httpcomponents:*</include>
                                    <include>io.netty:*</include>
                                    <include>com.typesafe.netty:*</include>
                                    <include>fr.cnes.regards.framework.utils:s3-storage-utils</include>
                                    <include>fr.cnes.regards.framework:s3-starter</include>
                                    <include>fr.cnes.regards.framework.utils.file:*</include>
                                    <include>fr.cnes.regards.modules.storage.plugins:s3-storage-common</include>
                                    <include>fr.cnes.regards.modules.storage.plugins:s3-storage-common-plugin</include>
                                    <include>fr.cnes.regards.modules.storage.plugins:s3-storage-common-plugin-dto</include>
                                    <include>fr.cnes.regards.modules.storage.plugins:*</include>
                                    <include>fr.cnes.regards.modules.fileaccess.plugin:file-access-plugin-domain</include>
                                </includes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.spotify</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <configuration>
                    <retryPushCount>0</retryPushCount>
                    <skipDockerBuild>false</skipDockerBuild>
                    <forceTags>true</forceTags>
                    <imageName>${docker.registry.host}/rs-${project.artifactId}</imageName>
                    <serverId>REGARDS-DockerHub</serverId>
                    <registryUrl>${docker.registry.host}</registryUrl>
                    <imageTags>
                        <imageTag>${project.version}</imageTag>
                    </imageTags>
                    <dockerDirectory>${project.basedir}/docker</dockerDirectory>
                    <resources>
                        <resource>
                            <targetPath>/</targetPath>
                            <directory>${project.build.directory}</directory>
                            <include>*-shaded.jar</include>
                        </resource>
                    </resources>
                </configuration>
            </plugin>
        </plugins>
    </build>


</project>
