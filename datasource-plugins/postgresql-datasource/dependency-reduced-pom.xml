  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>fr.cnes.regards.modules.datasources.plugins</groupId>
  <artifactId>postgresql-datasource</artifactId>
  <version>2.0.0-SNAPSHOT</version>
  <description>PostgreSQL datasource</description>
  <url>https://github.com/RegardsOss/RegardsOss.github.io</url>
  <inceptionYear>2016</inceptionYear>
  <developers>
    <developer>
      <name>REGARDS Team</name>
      <organization>CS Syst√®mes d'Information</organization>
      <organizationUrl>http://www.c-s.fr</organizationUrl>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>GNU General Public License (GNU GPL)</name>
      <url>http://www.gnu.org/licenses/gpl.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <organization>
    <name>CNES</name>
    <url>https://cnes.fr/fr</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>fr.cnes.regards.modules.datasources.plugins:db-datasource-common</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>fr.cnes.regards.framework.modules.plugins</groupId>
      <artifactId>plugins-domain</artifactId>
      <version>2.0.0-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>fr.cnes.regards.modules.datasources</groupId>
      <artifactId>datasources-domain</artifactId>
      <version>2.0.0-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>fr.cnes.regards.framework.test</groupId>
      <artifactId>regards-integration-test</artifactId>
      <version>2.0.0-SNAPSHOT</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>microservice-core-starter</artifactId>
          <groupId>fr.cnes.regards.framework</groupId>
        </exclusion>
        <exclusion>
          <artifactId>regards-test</artifactId>
          <groupId>fr.cnes.regards.framework.test</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jpa-multitenant-regards-test</artifactId>
          <groupId>fr.cnes.regards.framework</groupId>
        </exclusion>
        <exclusion>
          <artifactId>spring-restdocs-mockmvc</artifactId>
          <groupId>org.springframework.restdocs</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>1.1.11</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>jcl-over-slf4j</artifactId>
      <version>1.7.25</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
</project>

